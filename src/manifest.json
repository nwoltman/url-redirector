{
  "name": "URL Redirector",
  "version": "1.0.0",
  "description": "Checks the URL currently being navigated to and redirects if it matches a user-defined redirect rule.",
  
  "permissions": [
  	"storage",
  	"webRequest",
  	"webRequestBlocking",
  	"<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icon_small.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["redirect.js"]
  },
  "icons": {
    "16": "icon_small.png",
    "48": "icon_big.png",
    "128": "icon_big.png"
  },
  
  "manifest_version": 2
}
